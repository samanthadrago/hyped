<div class="list">
<h1>Your hyplist</h1>
<% user = User.find(session[:user_id]) %>
<% user.pending_movies.each do |movie| %>
  <div class="hyp-movie" id="<%= movie.rt_id %>">
    <img src="<%= movie.img %>">
    <h2 class="title"><%= movie.title%></h2>
    <p class="year">Year: <%= movie.year%></p>
    <p class="rating">Rating: <%= movie.rating %></p>
    <p class="url"><a href="<%= movie.url%>">Read reviews</a></p>

    <button class="mark-watched">Mark as watched</button><br>
  </div>

<% end %>
</div>