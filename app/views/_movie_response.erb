<div class="movie-result" id=<%=@movie['id']%>>
  <img class="result-img" src=<%=@movie['posters']['original']%>>
  <h2 class="result-title"><%= @movie["title"]%></h2>
  <p class="result-year"><%= @movie["year"]%></p>
  <p class="result-rating"><%= @movie["ratings"]["critics_score"]%></p>
  <p class="result-url"><a href="<%= @movie["links"]["alternate"]%>">Read reviews</a></p>

  <button class="add-movie">Add to your hyplist</button>
</div>

